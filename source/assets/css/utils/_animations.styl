// Loadin animation
.loader
  border 5px solid $clouds
  border-top 5px solid $pewter-river
  border-radius 50%
  width 50px
  height 50px
  animation spin 1s ease-in-out infinite
  margin 15px auto

@keyframes spin {
    0%{transform: rotate(0deg)}
    100%{transform: rotate(360deg)}
}
