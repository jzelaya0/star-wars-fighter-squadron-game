//- source/templates/_game.pug
div.col-sm-12
  //- Only show on desktop
  div(class="canvas-container" ng-if="game.showGame")
    div(class="btn-group btn-group-justified")
      //- Game instructions
      div.btn-group
        button(class="btn btn-primary" ng-click="game.toggleHowToPlay()")
          i(class="fa fa-info-circle" aria-hidden="true")
          | &#8200;How to Play
      //- Save scores
      div.btn-group
        button(class="btn btn-default" ng-click='game.saveStats()')
          i(class="fa fa-floppy-o" aria-hidden="true")
          | &#8200;Save Scores
      //- Stats
      div.btn-group
        button(class="btn btn-primary" ng-click='game.showStatsPanel()')
          i(class="fa fa-bullseye" aria-hidden="true")
          | &#8200;Highest Scores
    //- Stats panel view
    div(ui-view='stats' ng-if="game.showStats" class="panel panel-primary pop-up-panel panel-right")
    //- How to play panel view
    div(ui-view='howToPlay' ng-if="game.showHowToPlay" class="panel panel-info pop-up-panel panel-left")
    //- Game Canvas
    div(id="gameCanvas", game-canvas)
  //- Only show if device is mobile or tablet
  div(class='panel panel-warning' ng-if="!game.showGame")
    div(class="panel-heading")
      h1.
       Oops! Can't play here!
    div(class="panel-body")
      p
        | This game is not playable on mobile or tablet devices. Please log in on a laptop or desktop device to play!
