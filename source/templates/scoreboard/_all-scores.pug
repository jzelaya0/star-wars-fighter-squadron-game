//- source/templates/scoreboard/_all-scores.pug

div.col-sm-12
  div(class="panel panel-info")
    //- Header
    div.panel-heading
      h1 Highest Scores
    //- Loader
    div(ng-if="all.loading" class='text-center')
      i(class="fa fa-spinner loader")
    //- Body content
    div(class="panel-body" ng-if="!all.loading")
      div.input-group
        span(class="input-group-addon")
          i(class='fa fa-search')
        input(type='text' ng-model='all.search' class="form-control" placeholder="Search")
      table(class="table table-striped table-hover")
        thead
          tr
            th UserName
            th Highest Score
            th Most Kills
          tr(dir-paginate="u in all.users | orderBy : '-highestScore' | filter: all.search | itemsPerPage: 10")
            td {{u.username}}
            td {{u.highestScore}}
            td {{u.mostKills}}
      dir-pagination-controls(max-size='5', direction-links='false', boundary-links='true')
