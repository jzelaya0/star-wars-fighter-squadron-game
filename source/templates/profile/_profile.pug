//- source/templates/_profile.pug

div.col-sm-12
  div.jumbotron
    h1.
      Greetings {{main.user.name}}!
//- Profile panel
div.col-sm-6
  div(class="panel panel-default")
    div.panel-heading
      h2 Profile Info
        span(class="glyphicon glyphicon-user pull-right")
    div(ng-if="profile.loading" class='text-center')
      i(class="fa fa-spinner loader")
    div(class="panel-body table table-striped table-hover" ng-if="!profile.loading")
      table(class="table table-striped table-hover")
        tbody
          tr
            td Name:
            td {{profile.userInfo.name}}
          tr
            td Username:
            td {{profile.userInfo.username}}
          tr
            td Email:
            td {{profile.userInfo.email}}
          tr
            td Highest Score:
            td {{profile.userInfo.highestScore}}
          tr
            td Highest Kill Count:
            td {{profile.userInfo.mostKills}}
          tr
            td Member Since:
            td {{profile.userInfo.createdAt}}
          tr
            td Last Update:
            td {{profile.userInfo.updatedAt}}

//- Edit panel
div(class="col-sm-6" ui-view="edit")
